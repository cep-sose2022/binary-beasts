         "401": {
           "description": "UNAUTHORIZED"
         },
         "403": {
           "description": "FORBIDDEN"
         }
       },
       "parameters": [
         {
           "name": "name",
           "in": "path",
           "description": "level name",
           "type": "string",
           "required": true
         }
       ]
     }
